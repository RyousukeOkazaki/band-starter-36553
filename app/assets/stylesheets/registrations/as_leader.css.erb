.background-as-leader{
  background-image: url("<%= asset_path('back.jpeg') %>");
  background-color: rgba(116, 127, 163, 0.9);
  background-blend-mode: color-burn;
  background-size: cover;
  height: calc(100vh - 60px);
  overflow: scroll;
  color: aliceblue;

}

.registration-btn {
  background-color: rgb(2, 24, 24);
  margin: 50px auto 50px;
  display: block;
  color: azure;
  height: 150px;
  width: 150px;
  border-radius: 60%;
  border: whitesmoke 1px solid;
  font-family: 'Caveat', cursive;
  font-size: 40px;
  font-weight: bold;
  cursor: pointer;
}

.registration-btn:hover {
  background-color: rgb(105, 110, 110);
  transition: all 0.3s;
}

.back-btn {
  background-color: rgb(2, 24, 24);
  margin: 0 auto;
  display: block;
  color: azure;
  height: 37px;
  width: 100px;
  border-radius: 20px;
  border: whitesmoke 1px solid;
  font-family: 'Caveat', cursive;
  font-size: 18px;
  font-weight: bold;
  cursor: pointer;
}

.back-btn:hover {
  background-color: rgb(105, 110, 110);
  transition: all 0.3s;
}