<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: @post.errors.count,
                 resource: @post.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        
      <% end %>
    </ul>
  </div>
<% else %>
  <div id="error_explanation">
    <h2>入力エラーはありません</h1>
  </div>
<% end %>