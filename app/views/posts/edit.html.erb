<div class="background">
<%= render "posts/shared/error_messages", resource: @post %>

<%= form_with(model: @post, url: post_path(@post), local: true) do |f| %>
  <div class="field">
    <%= f.label:タイトル %>
    <%= f.text_field :title, placeholder:"（例:若者のオールディーズバンド！メンバー探してます）", class:"box" %>
  </div>
  <div class="field-textarea">
    <%= f.label:内容 %>
    <%= f.text_area :introduction, placeholder:"(例:最終的な目標はメジャーでプロになることです。まずはコピーから入り、人気が出てきたらオリジナル曲をいれていく予定です。)", class:"box-textarea"  %>
  </div>
  <div class="field">
    <%= f.label:仮バンド名 %>
    <%= f.text_field :band_name_idea, placeholder:"(例:ザ・ローリングロックス)", class:"box" %>
  </div>
  <div class="field">
    <%= f.label:募集中のパート %>
    <%= f.collection_select(:need_part_id, NeedPart.all, :id, :name, {}, {class:"need_part-select box"}) %>
  </div>
  <div class="field">
    <%= f.label:活動地域 %>
    <%= f.collection_select(:area_of_activity_id, AreaOfActivity.all, :id, :name, {}, {class:"area_of_activity-select box"}) %>
  </div>
  <div class="field">
    <%= f.label:演奏するジャンル %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select box"}) %>
  </div>
  <div class="field">
    <%= f.label:活動方針 %>
    <%= f.collection_select(:professional_or_id, ProfessionalOr.all, :id, :name, {}, {class:"proffessional_or-select box"}) %>
  </div>
  <div>
    <%= f.submit "Update", class:"update-btn" %>
  </div>
<% end %>
</div>