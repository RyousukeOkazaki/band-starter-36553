<div class="background">
  <div class="room-index-logo">Your Rooms</div>

<% if user_signed_in? %>

  <% if @userrooms.present? %>
    <div class="room-index-rooms">
      <% @userrooms.each do |userroom| %>
        <div class="room-index-room"><%= link_to "#{userroom.room.name}", room_path(userroom.room),class:"room-index-room-link" %></div>
      <% end %>
    </div>
  <% end %>

  <div class="rooms-index-make"><%= link_to 'Create', new_room_path, class:"rooms-index-make-link" %></div>

<% else %>

  <div class="room-index-description">Sorry! You Need to <%= link_to "Log In", new_user_session_path, class:"room-index-login-link" %>.</div>

<% end %>

</div>