<div class="side-header">
  <div class="header-logo">Band Starter</div>
  <div class="header-list">
    <ul>
      <li><%= link_to 'Top', root_path, class:"side-btn" %></li>
      <li><%= link_to 'Players', users_path, class:"side-btn" %></li>
      <li><%= link_to 'Rooms', rooms_path, class:"side-btn" %></li>
    </ul>
    <% if user_signed_in? %>
    <div class="bottom-list">
      <div class="bottom-user-data">
        <div><%= "#{current_user.nickname}'s Data "%></div>
        <div><%= "#{current_user.sex.name}(#{@current_user_age}歳 #{current_user.prefecture.name})" %></div>
        <% if @current_post && !current_page?(new_post_path) %>
          <div><%= "#{@current_post.need_part.name}募集中" %></div>
        <% end %>
      </div>
      <ul>
        <li><%= link_to 'Edit', edit_user_registration_path, class:"side-btn" %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class:"side-btn" %></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>