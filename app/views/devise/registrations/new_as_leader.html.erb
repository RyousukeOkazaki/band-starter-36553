<h2>Sign up</h2>

<%= form_for @as_leader do |f| %>
  <%= render "devise/shared/error_messages", resource: @as_leader %>


  <div class="field">
    <%= f.label :理想のバンド像 %><br />
    <%= f.text_area :what_band, placeholder: "理想のバンド像について書いてください" %>
  </div>

  <div class="field">
    <%= f.label :上記のバンド像がなぜ理想か %>
    <%= f.text_area :why_band, placeholder: "上記バンド像が理想である理由を書いてください" %>
  </div>

  <div class="field">
    <%= f.label :理想のメンバー像 %>
    <%= f.text_field :ideal_member, placeholder: "理想のメンバー像を書いてください" %>
  </div>

  <div class="field">
    <%= f.label :リーダー歴（半角数字） %>
    <%= f.text_field :how_long_leader, placeholder: "リーダー経験の長さを書いてください" %>
  </div>

  <div class="field">
    <%= f.label :リーダーシップ（活動方針etc） %>
    <%= f.collection_select(:leader_ship_id, LeaderShip.all, :id, :name, {}, {class:"leader_ship-select"}) %>
  </div>

  <div class="field">
    <%= f.label :最もやりたいジャンル %>
    <%= f.collection_select(:do_genre_id, DoGenre.all, :id, :name, {}, {class:"do_genre-select"}) %>
  </div>

  <div class="field">
    <%= f.label :演奏の指示 %>
    <%= f.collection_select(:order_style_id, OrderStyle.all, :id, :name, {}, {class:"order_syle-select"}) %>
  </div>

  <div class="field">
    <%= f.label :作曲のやり方 %>
    <%= f.collection_select(:compose_style_id, ComposeStyle.all, :id, :name, {}, {class:"compose_style-select"}) %>
  </div>

  <div class="field">
    <%= f.label :掛け持ち %>
    <%= f.collection_select(:belong_many_id, BelongMany.all, :id, :name, {}, {class:"belong_many-select"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

